@model LibSpace_Aspnet.Models.Biblioteca

@{
    ViewData["Title"] = "Editar Biblioteca";
}

<div class="setup-container">
    <div class="setup-card">
        <div class="setup-header">
            <i class="fas fa-library setup-icon"></i>
            <h2 class="setup-title">Editar Informações da Biblioteca</h2>
        </div>

        <form asp-action="Edit" class="setup-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBiblioteca" />
            
            <div class="form-group-row">
                <div class="form-group">
                    <label asp-for="NomeBiblioteca">Nome da Biblioteca</label>
                    <input asp-for="NomeBiblioteca" class="form-control" />
                    <span asp-validation-for="NomeBiblioteca" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-row">
                <div class="form-group">
                    <label asp-for="EndMorada">Endereço</label>
                    <input asp-for="EndMorada" class="form-control" />
                    <span asp-validation-for="EndMorada" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-row two-columns">
                <div class="form-group">
                    <label asp-for="EndCodPostal">Código Postal</label>
                    <input asp-for="EndCodPostal" class="form-control" />
                    <span asp-validation-for="EndCodPostal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndLocalidade">Localidade</label>
                    <input asp-for="EndLocalidade" class="form-control" />
                    <span asp-validation-for="EndLocalidade" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-row two-columns">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefone">Telefone</label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group-row">
                <div class="form-group">
                    <label asp-for="Horario">Horário de Funcionamento</label>
                    <textarea asp-for="Horario" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Horario" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="history.back()">
                    <i class="fas fa-arrow-left"></i> Voltar
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Alterações
                </button>
            </div>
        </form>
    </div>
</div>
<style>
    .setup-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .setup-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        padding: 2rem;
    }

    .setup-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .setup-icon {
        font-size: 3rem;
        color: #004d40;
        margin-bottom: 1rem;
    }

    .setup-title {
        color: #004d40;
        margin-bottom: 0.5rem;
    }

    .form-group-row {
        margin-bottom: 1.5rem;
    }

    .two-columns {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        color: #004d40;
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        border-color: #004d40;
        outline: none;
        box-shadow: 0 0 0 2px rgba(0,77,64,0.1);
    }

    .form-actions {
        margin-top: 2rem;
        text-align: center;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn {
        padding: 0.75rem 2rem;
        border-radius: 5px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background-color: #004d40;
        border: none;
        color: white;
    }

    .btn-primary:hover {
        background-color: #00695c;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }

    .btn-secondary:hover {
        opacity: 0.9;
    }

    @@media (max-width: 768px) {
        .two-columns {
            grid-template-columns: 1fr;
        }
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 