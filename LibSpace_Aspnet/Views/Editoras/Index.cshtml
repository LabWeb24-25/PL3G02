@model IEnumerable<LibSpace_Aspnet.Models.Editora>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEditora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfoEditora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgEditora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEditora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfoEditora)
            </td>
            <td>
                <img src="@Url.Content("~/Editora_IMG/" + item.ImgEditora)" alt="Imagem de @item.NomeEditora" width="100" height="100" />
            </td>
            <td>
               
                <a asp-action="Details" asp-route-id="@item.IdEditora">Details</a>
               

            </td>
        </tr>
}
    </tbody>
</table>
