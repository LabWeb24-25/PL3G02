@model LibSpace_Aspnet.Models.Editora

@{
    ViewData["Title"] = "Details";
}

<div class="DivGeneralDetails">
    <div class="DivIMG">
        <img src="@Url.Content("~/Editora_IMG/" + Model.ImgEditora)" alt="Imagem de @Model.NomeEditora" class="imgdetails" />

    </div>
    <div class="DivInformation">
        <h4 class="textform_color">Nome: @Html.DisplayFor(model => model.NomeEditora)</h4>
        <hr />
        <p class="control-label textform_color">Sobre a Editora:</p>
        <p>@Html.Raw(Model.InfoEditora?.Replace("\n", "<br />"))</p>
        <div class="action-links">
            <hr />
            <br />
            <a asp-action="Edit" asp-route-id="@Model.IdEditora" class="btn_submit">Editar Editora</a>
            <a asp-action="Delete" asp-route-id="@Model.IdEditora" class="btn_red">Eliminar Editora</a>
        </div>
    </div>
</div>
<br />

<div class="action-links">
    <button type="button" class="btn_submit" onclick="history.back()">Voltar</button>
</div>

