@model LibSpace_Aspnet.Models.Editora

@{
    ViewData["Title"] = "Details";
}

<div class="form-container details-container">
    <h4 class="form-title">Detalhes da Editora</h4>
    <div class="form-content">
        <div class="form-row form-row-details">
            <div class="form-group form-group-image">
                <img src="@Url.Content("~/Editora_IMG/" + Model.ImgEditora)" alt="Logo de @Model.NomeEditora" class="publisher-image" />
            </div>
            <div class="form-group form-group-info">
                <div>
                    <p class="form-label">Nome:</p>
                    <p>@Html.DisplayFor(model => model.NomeEditora)</p>
                    <p class="form-label">Sobre a Editora:</p>
                    <p>@Html.Raw(Model.InfoEditora?.Replace("\n", "<br />"))</p>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="history.back()">Voltar</button>
            @if (User.IsInRole("Bibliotecario"))
            {
                <div class="edit-delete-buttons">
                    <a asp-action="Edit" asp-route-id="@Model.IdEditora" class="btn btn-primary btn-edit">Editar</a>
                    <a asp-action="Delete" asp-route-id="@Model.IdEditora" class="btn btn-danger btn-delete">Eliminar</a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/create_design_editora_details.css" />
    <style>
        .publisher-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
            background: #f6f6f6;
            border-radius: 4px;
            padding: 1rem;
        }

        .form-group-image {
            max-width: 300px;
            margin-right: 2rem;
        }

        .details-container .form-row {
            grid-template-columns: 1fr 2fr;
        }

        @@media (max-width: 992px) {
            .publisher-image {
                height: 180px;
            }
        }

        @@media (max-width: 768px) {
            .publisher-image {
                height: 160px;
            }
            .form-group-image {
                margin-right: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .details-container .form-row {
                grid-template-columns: 1fr;
            }
            .form-group-image {
                margin: 0 auto 1rem auto;
            }
        }
    </style>
}