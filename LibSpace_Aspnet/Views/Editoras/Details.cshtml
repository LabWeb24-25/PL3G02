@model LibSpace_Aspnet.Models.Editora

@{
    ViewData["Title"] = "Details";
}

<div class="form-container details-container">
    <h4 class="form-title">Detalhes da Editora</h4>
    <div class="form-content">
        <div class="form-row">
            <div class="form-group form-group-image">
                <img src="@Url.Content("~/Editora_IMG/" + Model.ImgEditora)" alt="Imagem de @Model.NomeEditora" class="imgdetails" />
            </div>
            <div class="form-group form-group-info">
                <div>
                    <p><span class="info-label">Nome:</span> @Html.DisplayFor(model => model.NomeEditora)</p>
                    <p><span class="info-label">Sobre a Editora:</span> @Html.Raw(Model.InfoEditora?.Replace("\n", "<br />"))</p>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="history.back()">Voltar</button>
            @if (User.IsInRole("Bibliotecario"))
            {
                <div class="edit-delete-buttons">
                    <a asp-action="Edit" asp-route-id="@Model.IdEditora" class="btn btn-primary btn-edit">Editar</a>
                    <button type="button" class="btn btn-danger btn-delete" data-toggle="modal" data-target="#confirmDeleteModal" data-id="@Model.IdEditora">Eliminar</button>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir esta editora?</p>
                <p>Esta ação vai remover os livros associados e não pode ser desfeita.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" action="@Url.Action("Delete", "Editoras")">
                    <input type="hidden" id="editoraId" name="idEditora" />
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/create_design_editora_details.css" />
    <!-- Adicionar o CSS do Bootstrap Modal -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Quando o botão de "Eliminar" for clicado, configurar o ID da editora no formulário de exclusão
        $('#confirmDeleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Botão que abriu o modal
            var editoraId = button.data('id'); // Extrair o ID da editora
            var modal = $(this);
            modal.find('#editoraId').val(editoraId); // Colocar o ID da editora no campo oculto do formulário
        });
    </script>
}