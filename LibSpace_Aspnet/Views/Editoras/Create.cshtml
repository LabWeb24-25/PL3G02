@model LibSpace_Aspnet.Models.Editora

@{
    ViewData["Title"] = "Create";
}

<div class="form-container">
    <h4 class="form-title">Adicionar Editora</h4>
    <form asp-action="Create" class="form-content" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Campo para adicionar a imagem da editora -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="ImgEditoraFile" class="form-label">Insira uma foto <span class="required">*</span></label>
                <input asp-for="ImgEditoraFile"
                       type="file"
                       class="form-control-file"
                       accept=".jpg, .jpeg, .png"
                       id="imgEditoraInput"
                       onchange="previewImage(event, 'imgEditoraPreview')" />
                <span asp-validation-for="ImgEditoraFile" class="text-danger"></span>
            </div>
            <div class="form-group position-relative">
                <img id="imgEditoraPreview"
                     src="#"
                     alt="Image Preview"
                     style="display:none; max-width: 200px; max-height: 200px; margin-top: 10px;" />
                <!-- Botão para remover a imagem -->
                <button type="button"
                        class="btn btn-danger btn-sm position-absolute"
                        style="top: 10px; right: 10px; display: none;"
                        id="removeImageButton"
                        onclick="removeImage('imgEditoraInput', 'imgEditoraPreview', 'removeImageButton')">
                    X
                </button>
            </div>
        </div>

        <!-- Campo Nome da Editora -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="NomeEditora" class="form-label">Nome<span class="required">*</span></label>
                <input asp-for="NomeEditora" class="form-control" />
                <span asp-validation-for="NomeEditora" class="text-danger"></span>
            </div>
        </div>

        <!-- Campo Sobre a Editora -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="InfoEditora" class="form-label">Sobre a Editora</label>
                <textarea asp-for="InfoEditora" class="form-control textarea"></textarea>
                <span asp-validation-for="InfoEditora" class="text-danger"></span>
            </div>
        </div>

        <!-- Botões -->
        <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="history.back()">Voltar</button>
            <input type="submit" value="Criar Editora" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Styles {
    <!-- Font Awesome for the remove button icon (optional if you use text "X") -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Custom CSS for styling (ensure this path is correct) -->
    <link rel="stylesheet" href="~/css/design_editora.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}