@model LibSpace_Aspnet.Models.EditoraViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="forms_design">
    <h4 class="textform_color">Adicionar Editora</h4>
    <div class="col-md-4">
        <form asp-action="Create" class="forms_center" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="ImgEditora" class="control-label textform_color">Insira uma foto</label>
                <input asp-for="ImgEditora" type="file" class="form-control" />
                <span asp-validation-for="ImgEditora" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="NomeEditora" class="control-label textform_color">Nome</label>
                <input asp-for="NomeEditora" class="form-control" />
                <span asp-validation-for="NomeEditora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoEditora" class="control-label textform_color">Sobre a Editora</label>
                <textarea asp-for="InfoEditora" class="textbox"></textarea>
                <span asp-validation-for="InfoEditora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" class="btn_submit" onclick="history.back()">Voltar</button>
                <input type="submit" value="Criar Editora" class="btn_submit" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
