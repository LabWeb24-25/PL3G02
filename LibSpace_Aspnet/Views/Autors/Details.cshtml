@model LibSpace_Aspnet.Models.Autor

@{
    ViewData["Title"] = "Details";
}

<div class="form-container details-container">
    <h4 class="form-title">Detalhes do Autor</h4>
    <div class="form-content">
        <div class="form-row form-row-details">
            <div class="form-group form-group-image">
                @if (!string.IsNullOrEmpty(Model.FotoAutor))
                {
                    <img src="@Url.Content("~/Foto_Autor/" + Model.FotoAutor)" alt="Imagem de @Model.NomeAutor" class="imgdetails" />
                }
            </div>
            <div class="form-group form-group-info">
                <div>
                    <p class="form-label">Pseudónimo:</p>
                    <p>@Html.DisplayFor(model => model.Pseudonimo)</p>
                    <p class="form-label">Nome Completo:</p>
                    <p>@Html.DisplayFor(model => model.NomeAutor)</p>
                    <p class="form-label">País de Origem:</p>
                    <p>@Html.DisplayFor(model => model.IdLinguaNavigation.NomePais)</p>
                    <p class="form-label">Data de Nascimento:</p>
                    <p>@Html.DisplayFor(model => model.DataNascimento)</p>
                    <p class="form-label">Data de Falecimento:</p>
                    <p>@Html.DisplayFor(model => model.DataFalecimento)</p>
                    <p class="form-label">Bibliografia:</p>
                    <p>@Html.Raw(Model.Bibliografia?.Replace("\n", "<br />"))</p>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="history.back()">Voltar</button>
            @if (User.IsInRole("Bibliotecario"))
            {
                <div class="edit-delete-buttons">
                    <a asp-action="Edit" asp-route-id="@Model.IdAutor" class="btn btn-primary btn-edit">Editar</a>
                    <a asp-action="Delete" asp-route-id="@Model.IdAutor" class="btn btn-danger btn-delete">Eliminar</a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/create_design_autor_details.css" />
}