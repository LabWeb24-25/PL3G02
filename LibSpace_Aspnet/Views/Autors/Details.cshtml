@model LibSpace_Aspnet.Models.Autor

@{
    ViewData["Title"] = "Details";
}



<div class="DivGeneralDetails">
    <div class="DivIMG">
        <img src="@Url.Content("~/Foto_Autor/" + Model.FotoAutor)" alt="Imagem de @Model.FotoAutor" class="imgdetails" />

    </div>
    <hr />
    <div class="DivInformation">
        <h4 class="textform_color">
            @Html.DisplayFor(model => model.Pseudonimo)
        </h4>
        <hr />
        <p class="control-label textform_color">
            <strong>Nome Completo:</strong> @Html.DisplayFor(model => model.NomeAutor)
        </p>
        <p class="control-label textform_color">
            <strong>País de Origem:</strong> @Html.DisplayFor(model => model.IdLinguaNavigation.NomePais)
        </p>
        <p class="control-label textform_color">
            <strong>Data de Nascimento:</strong> @Html.DisplayFor(model => model.DataNascimento)
        </p>
        <p class="control-label textform_color">
            <strong>Data de Falecimento:</strong> @Html.DisplayFor(model => model.DataFalecimento)
        </p>
        <p class="control-label textform_color">
            <strong>Bibliografia:</strong>
        </p>
        <p>@Html.Raw(Model.Bibliografia?.Replace("\n", "<br />"))</p>
        <hr />
        <br />
        <div class="action-links">
            @if (User.IsInRole("Bibliotecario"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.IdAutor" class="btn_submit">Editar Autor</a>
                <a asp-action="Delete" asp-route-id="@Model?.IdAutor" class="btn_red">Eliminar Autor</a>
            }
        </div>
    </div>
</div>
<br />
<div class="action-links">
    <button type="button" class="btn_submit" onclick="history.back()">Voltar</button>
</div>