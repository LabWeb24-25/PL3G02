@model IEnumerable<UserListViewModel>
@{
    ViewData["Title"] = "Gestão de Utilizadores";
}

<div class="user-management-container">
    <div class="header-section">
        <h2 class="section-title">Gestão de Utilizadores</h2>
        <button class="btn btn-primary add-user-btn">
            <i class="fas fa-user-plus"></i>
            Adicionar Utilizador
        </button>
    </div>

    <div class="search-section">
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Procurar utilizador...">
        </div>
        <button class="btn btn-outline-secondary sort-btn">
            <i class="fas fa-sort"></i>
            Ordenar
        </button>
    </div>

    <div class="users-list-container">
        <h3 class="list-title">Utilizadores</h3>
        <div class="users-list">
            @foreach (var user in Model)
            {
                <div class="user-item">
                    <div class="user-info">
                        <div class="user-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="user-details">
                            <div class="user-name">@user.Nome_Perfil</div>
                            <div class="user-email">@user.Email</div>
                        </div>
                    </div>
                    <div class="user-actions">
                        <button class="btn btn-light action-btn" title="Detalhes" onclick="showUserDetails('@user.Id')">
                            <i class="fas fa-cog"></i> Detalhes
                        </button>
                        <button class="btn btn-light action-btn" title="Promover">
                            <i class="fas fa-star"></i> Promover
                        </button>
                        <button class="btn btn-light action-btn text-danger" title="Bloquear">
                            <i class="fas fa-ban"></i> Bloquear
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="modalContainer"></div>