@model LibSpace.Models.LivroViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container form-container">
    <h4 class="form-title">Adicionar Livro</h4>
    <form asp-action="Create" class="form-content" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Campo para adicionar a capa do livro -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="CapaImg" class="form-label">Adicionar Capa</label>
                <input type="file" asp-for="CapaImg" class="form-control-file" id="capaImgInput" onchange="previewImage(event, 'imagePreview')" />
                <span asp-validation-for="CapaImg" class="text-danger"></span>
            </div>
            <div class="form-group position-relative">
                <img id="imagePreview" src="#" alt="Image Preview" style="display:none; max-width: 200px; max-height: 200px; margin-top: 10px;" />
                <!-- Add the remove button -->
                <button type="button" class="btn btn-danger btn-sm position-absolute" style="top: 10px; right: 10px; display: none;" id="removeImageButton" onclick="removeImage('capaImgInput', 'imagePreview', 'removeImageButton')">
                    X
                </button>
            </div>
        </div>

        <!-- Campos ISBN e Título -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Isbn" class="form-label">ISBN</label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TituloLivros" class="form-label">Título</label>
                <input asp-for="TituloLivros" class="form-control" />
                <span asp-validation-for="TituloLivros" class="text-danger"></span>
            </div>
        </div>

        <!-- Campos Autor com dropdown e link para criar novo autor -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="IdAutor" class="form-label">Autor</label>
                <select asp-for="IdAutor" class="form-control" asp-items="ViewBag.IdAutor"></select>
                <span asp-validation-for="IdAutor" class="text-danger"></span>
                <label class="control-label">Caso não exista:</label>
                <a asp-action="Create" asp-controller="Autors" asp-route-returnUrl="/Livros/Create" class="btn_rend">Criar Autor</a>
            </div>

            <!-- Campo Editora com dropdown e link para criar nova editora -->
            <div class="form-group">
                <label asp-for="IdEditora" class="form-label">Editora</label>
                <select asp-for="IdEditora" class="form-control" asp-items="ViewBag.IdEditora"></select>
                <span asp-validation-for="IdEditora" class="text-danger"></span>
                <label class="control-label">Caso não exista:</label>
                <a asp-action="Create" asp-controller="Editoras" asp-route-returnUrl="/Livros/Create" class="btn_rend">Criar Editora</a>
            </div>
        </div>

        <!-- Campos Idioma e Número de Exemplares -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="IdLingua" class="form-label">País de Origem</label>
                <select asp-for="IdLingua" class="form-control" asp-items="ViewBag.IdLingua"></select>
                <span asp-validation-for="IdLingua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumExemplares" class="form-label">Número de Exemplares</label>
                <input asp-for="NumExemplares" class="form-control" />
                <span asp-validation-for="NumExemplares" class="text-danger"></span>
            </div>
        </div>

        <!-- Campo Data de Edição -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="DataEdicao" class="form-label">Data de Publicação</label>
                <input asp-for="DataEdicao" type="date" class="form-control" />
                <span asp-validation-for="DataEdicao" class="text-danger"></span>
            </div>
        </div>

        <!-- Campo Sinopse -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Sinopse" class="form-label">Sinopse</label>
                <textarea asp-for="Sinopse" class="form-control textarea"></textarea>
                <span asp-validation-for="Sinopse" class="text-danger"></span>
            </div>
        </div>

        <!-- Campo Gênero -->
        <div class="form-row">
            <div class="form-group">
                <label asp-for="IdGeneros" class="form-label">Gênero</label>
                <select asp-for="IdGeneros" class="form-control" asp-items="ViewBag.IdGeneros"></select>
                <span asp-validation-for="IdGeneros" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="history.back()">Voltar</button>
            <input type="submit" value="Adicionar Livro" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Styles {
    <!-- Font Awesome for the remove button icon (optional if you use text "X") -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Custom CSS for styling (ensure this path is correct) -->
    <link rel="stylesheet" href="~/css/create_design_livro.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
