@{
    ViewData["Title"] = "Acesso Negado";
}

<div class="unauthorized-page">
    <div class="access-denied-container">
        <div class="access-denied-content">
            <div class="icon-container">
                <i class="fas fa-exclamation-triangle" id="warning-icon"></i>
            </div>
            <h1>ACESSO NEGADO</h1>
            <div class="message-container">
                <p class="main-message">Não tem autorização para aceder a esta página</p>
                <p class="sub-message">Por favor, verifique suas permissões ou contacte o administrador.</p>
            </div>
            <div class="action-buttons">
                <button type="button" class="btn btn-primary" onclick="history.back()">
                    <i class="fas fa-arrow-left"></i> Voltar
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-home"></i> Página Inicial
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .unauthorized-page .access-denied-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .unauthorized-page .access-denied-content {
            max-width: 600px;
            width: 100%;
            text-align: center;
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .unauthorized-page .icon-container {
            margin-bottom: 1.5rem;
        }

        .unauthorized-page #warning-icon {
            font-size: 4rem;
            color: #6c757d;
            animation: unauthorized-pulse 2s infinite;
        }

        .unauthorized-page .message-container {
            margin: 2rem 0;
        }

        .unauthorized-page .main-message {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 1rem;
        }

        .unauthorized-page .sub-message {
            color: #888;
        }

        .unauthorized-page .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .unauthorized-page .btn {
            padding: 0.5rem 1.5rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-weight: 500;
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
        }

        .unauthorized-page .btn:hover {
            transform: translateY(-2px);
        }

        .unauthorized-page .btn-primary {
            background-color: #004d40;
            border: none;
            color: white;
        }

        .unauthorized-page .btn-primary:hover {
            background-color: #003d33;
        }

        .unauthorized-page .btn-secondary {
            background-color: #6c757d;
            border: none;
            color: white;
        }

        .unauthorized-page .btn-secondary:hover {
            background-color: #5a6268;
        }

        @@keyframes unauthorized-pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        @@media (max-width: 576px) {
            .unauthorized-page .action-buttons {
                flex-direction: column;
            }
        }
    </style>
}
