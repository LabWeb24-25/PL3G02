@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Palavra-Passe";
}

<div class="login-container">
    <div class="login-card">
        <div class="logo-container">
            <img src="~/images/logo.png" class="logo" alt="Logo" />
        </div>
        <h1>Redefinir Palavra-Passe</h1>
        <p class="simple-subtitle">Introduza os seus dados para redefinir a Palavra-Passe</p>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <!-- Campo de Email -->
            <div class="form-floating">
                <div class="input-container">
                    <i class="fas fa-envelope input-icon"></i> <!-- Ícone -->
                    <input asp-for="Input.Email"
                           class="form-control"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="Email" />
                    <label asp-for="Input.Email" class="sr-only">Email</label> <!-- Adicionando a classe sr-only ao label -->
                </div>
                <span asp-validation-for="Input.Email" class="sr-only"></span>
            </div>

            <!-- Campo de Nova Palavra-Passe -->
            <div class="form-floating">
                <div class="input-container">
                    <i class="fas fa-lock input-icon"></i> <!-- Ícone -->
                    <input asp-for="Input.Password"
                           class="form-control"
                           type="password"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="Insira a nova palavra-passe" />
                    <label asp-for="Input.Password" class="sr-only">Palavra-Passe</label> <!-- Adicionando a classe sr-only ao label -->
                </div>
                <span asp-validation-for="Input.Password" class="sr-only"></span>
            </div>

            <!-- Campo de Confirmação de Palavra-Passe -->
            <div class="form-floating">
                <div class="input-container">
                    <i class="fas fa-lock input-icon"></i> <!-- Ícone -->
                    <input asp-for="Input.ConfirmPassword"
                           class="form-control"
                           type="password"
                           autocomplete="new-password"
                           aria-required="true"
                           placeholder="Confirme sua palavra-passe" />
                    <label asp-for="Input.ConfirmPassword" class="sr-only">Confirmar Palavra-Passe</label> <!-- Adicionando a classe sr-only ao label -->
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="sr-only"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Redefinir Palavra-Passe</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/resetPassword.css" />
}
