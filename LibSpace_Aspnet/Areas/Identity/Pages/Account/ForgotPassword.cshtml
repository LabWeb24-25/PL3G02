@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu-se da sua palavra-passe?";
}

<div class="login-container">
    <div class="login-card">
        <div class="logo-container">
            <img src="/images/logo.png" alt="Logo" class="logo">
        </div>
        <h2>@ViewData["Title"]</h2>
        <p class="subtitle">Introduza o seu endereço de e-mail e enviaremos um link para redefinir a sua palavra-passe.</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group">
                <div class="input-container">
                    <i class="input-icon fas fa-envelope"></i>
                    <input asp-for="Input.Email"
                           class="form-control"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="login-button">Reset Password</button>

            <div class="register-prompt">
                Lembra-se da sua palavra-passe? <a href="/Identity/Account/Login" class="register-link">Back to login</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/forgotPassword.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
